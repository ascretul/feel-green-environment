docker compose run --rm --user $(id -u):$(id -g) backend composer create-project laravel/laravel .

docker compose run --rm --user $(id -u):$(id -g) frontend npx @angular/cli new .

docker compose run --rm --user $(id -u):$(id -g) frontend npx @angular/cli new frontend --style=scss --strict --standalone --ssr


docker compose up --build


docker exec -it <container_name> bash
ls -ld /var/www/html/storage/framework/sessions
chown -R www-data:www-data /var/www/html/storage
chmod -R 775 /var/www/html/storage
exit
